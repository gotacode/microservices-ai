{
  "name": "microservices-ai-boilerplate",
  "version": "0.0.0",
  "private": false,
  "description": "Minimal Node.js + TypeScript boilerplate for Lambda REST APIs with low cold-start bundling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --minify --sourcemap",
    "clean": "rm -rf dist node_modules .turbo",
    "lint": "eslint . --ext .ts,.js",
    "test": "JWT_SECRET=a-very-long-and-secure-test-secret-for-vitest-env vitest",
    "cov": "JWT_SECRET=a-very-long-and-secure-test-secret-for-vitest-env vitest run --coverage --run",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node src/index.ts\"",
    "docker:build": "docker build -t microservices-ai .",
    "docker:run": "docker run --rm -p 3000:3000 microservices-ai"
  },
  "keywords": [
    "lambda",
    "boilerplate",
    "typescript",
    "esbuild",
    "rest"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "dotenv": "^16.3.1",
    "fastify": "^5.6.1",
    "ioredis": "^5.7.0",
    "pino": "^9.3.1",
    "prom-client": "^14.2.0",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.2",
    "vitest": "^3.2.4"
  }
}
