{
  "name": "microservices-ai-boilerplate",
  "version": "0.0.0",
  "private": false,
  "description": "Minimal Node.js + TypeScript boilerplate for Lambda REST APIs with low cold-start bundling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --minify --sourcemap",
    "clean": "rm -rf dist node_modules .turbo",
    "lint": "eslint . --ext .ts,.js",
    "test": "vitest",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node src/index.ts\""
  },
  "keywords": [
    "lambda",
    "boilerplate",
    "typescript",
    "esbuild",
    "rest"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@middy/core": "^2.5.7",
    "@middy/http-error-handler": "^2.5.7",
    "@middy/http-json-body-parser": "^2.5.7",
    "fastify": "^5.6.1"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^20.19.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.2",
    "vitest": "^1.6.1"
  }
}
